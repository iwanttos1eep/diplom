<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f1da"
    tools:context=".fifty_twenty_thirty_method">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="50%"
                android:textSize="18sp"
                android:fontFamily="@font/comfortaa_bold"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/fifty_percent"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/buttonscolor"
                android:backgroundTintMode="src_in"
                android:fontFamily="@font/comfortaa_bold"
                android:text="45000"
                android:textSize="18sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="#96bb7c" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="20%"
                android:textSize="18sp"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"/>
            <Button
                android:id="@+id/twenty_percent"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center|top"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/buttonscolor"
                android:backgroundTintMode="src_in"
                android:fontFamily="@font/comfortaa_bold"
                android:text="45000"
                android:clickable="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttnadvice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="#96bb7c" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="30%"
                android:textSize="18sp"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"/>
            <Button
                android:id="@+id/thirt_percent"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/buttonscolor"
                android:backgroundTintMode="src_in"
                android:fontFamily="@font/comfortaa_bold"
                android:text="45000"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/dohodbtn"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/buttonscolor"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/comfortaa_bold"
        android:text="45000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dohodtxt"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dohodbtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:text="Доходы"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/dohodtxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="#96bb7c"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="0dp"
        android:background="#96bb7c" />


</RelativeLayout>


