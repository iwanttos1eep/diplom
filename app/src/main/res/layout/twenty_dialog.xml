<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/shit"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:fontFamily="@font/comfortaa_bold"
            />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/comfortaa_bold"
            android:text="\nВведите сумму" />

        <EditText
            android:id="@+id/twentyedit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:hint="Сумма"
            android:fontFamily="@font/comfortaa_bold"
            android:inputType="number"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/hate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttoncancel3"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="81dp"
            android:layout_height="59dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Отмена"
            android:textColor="@color/buttonscolor"
            android:textSize="16sp"
            app:iconTintMode="add" />

        <Button
            android:id="@+id/buttonconfirm3"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="81dp"
            android:layout_height="59dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/comfortaa_bold"
            android:text="OK"
            android:textColor="@color/buttonscolor"
            android:textSize="16sp"
            app:iconTint="@color/buttonscolor"
            app:iconTintMode="add" />

    </LinearLayout>

</RelativeLayout>