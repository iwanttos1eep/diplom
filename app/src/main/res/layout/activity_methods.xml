<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".methodsActivity"
    app:cardBackgroundColor="@color/backgroundcolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="27dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="27dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="250dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/choicetext"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/firstmethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="50-20-30"
                    android:textSize="30sp"
                    android:onClick="showDialog"/>

                <RadioButton
                    android:id="@+id/secondmethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="4 конверта"
                    android:textSize="30sp"
                    android:onClick="showDialog2"/>

                <RadioButton
                    android:id="@+id/thirdmethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="6 кувшинов"
                    android:textSize="30sp"
                    android:onClick="showDialog3"/>

                <Button
                    android:id="@+id/choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="выбрать" />

            </RadioGroup>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>